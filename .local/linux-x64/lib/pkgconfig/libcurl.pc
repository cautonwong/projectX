prefix=/home/uv+/.local/linux-x64
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include
supported_protocols="HTTP HTTPS WS WSS"
supported_features="alt-svc AsynchDNS HSTS HTTPS-proxy IPv6 Largefile libz NTLM PSL SSL threadsafe TLS-SRP UnixSockets zstd"

Name: libcurl
URL: https://curl.se/
Description: Library to transfer files with HTTP, FTP, etc.
Version: 8.14.1
Requires: openssl,zlib,libzstd,libpsl
Requires.private: openssl,zlib,libzstd,libpsl
Libs: -L${libdir} -lcurl -lssl -lcrypto -lz -lzstd -lpsl
Libs.private: -lpthread -lssl -lcrypto -lz -lzstd -lpsl
Cflags: -I${includedir} -DCURL_STATICLIB
Cflags.private: -DCURL_STATICLIB
